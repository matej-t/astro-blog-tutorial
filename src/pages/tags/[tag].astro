import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';

/**
 * Generates static paths for dynamic pages.
 *
 * Should always return a list of objects containing:
 *  - `params`: what to call each page route
 *  - `props?`: data that you want to pass to those pages
 **/
export async function getStaticPaths() {

	// const allPosts = await getCollection("blog");  /* Alternative way to get posts */
	const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));

	// const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
	const uniqueTags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];

	return uniqueTags.map((tag) => {

		// const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
		const filteredPosts = allPosts.filter((post: any) => post.frontmatter.tags.includes(tag));

		return { params: { tag }, props: { posts: filteredPosts } };
	});
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
	<p>Posts tagged with {tag}</p>
	<ul>
		{posts.map((post: any) =>
			// <BlogPost url={`/posts/${post.id}/`} title={post.data.title} />
			<BlogPost url={post.url} title={post.frontmatter.title} />
		)}
	</ul>
</BaseLayout>
